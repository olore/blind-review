{
  "name": "Blind Review",
  "description": "A browser extension to help perform unbiased reviews of pull requests",
  "manifest_version": 3,
  "version": "1.4",
  "homepage_url": "https://github.com/olore/blind-review",
  "icons": {
    "48": "icon-48x48.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "declarativeContent",
    "storage",
    "webNavigation",
    "tabs"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "*://*/*"
      ],
      "js": [
        "browser-polyfill.min.js",
        "content.js"
      ]
    }
  ],
  "action": {
    "default_title": "Toggle Blind Review",
    "default_icon": {
      "16": "icon-48x48.png",
      "32": "icon-48x48.png"
    },
    "show_matches": [
      "*://*/*/pull/*",
      "*://*/*/pull-requests/*"
    ]
  },
  "content_security_policy": {}
}